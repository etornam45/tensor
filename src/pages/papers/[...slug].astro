---
import { type CollectionEntry, getCollection } from "astro:content";
import PageLayout from "@layouts/PageLayout.astro";
import Container from "@components/Container.astro";
import FormattedDate from "@components/FormattedDate.astro";
import { readingTime } from "@lib/utils";
import BackToPrev from "@components/BackToPrev.astro";

export async function getStaticPaths() {
  const papers = (await getCollection("papers"))
    .filter(post => !post.data.draft)
    .sort((a, b) => b.data.dateRead.valueOf() - a.data.dateRead.valueOf());
  return papers.map((paper) => ({
    params: { slug: paper.slug },
    props: paper,
  }));
}
type Props = CollectionEntry<"papers">;

const paper = Astro.props;
const { Content } = await paper.render();
---

<PageLayout title={paper.data.title} description={paper.data.description}>
  <Container>
    <div class="animate">
      <BackToPrev href="/papers">
        Back to papers
      </BackToPrev>
    </div>
    <div class="space-y-1 my-10">
      <div class="animate flex items-center gap-1.5">
        <div class="font-base text-sm">
          <FormattedDate date={paper.data.dateRead} />
        </div>
        &bull;
        <div class="font-base text-sm">
          {readingTime(paper.body)}
        </div>
      </div>
      <div class="animate text-2xl font-semibold text-black dark:text-white">
        {paper.data.title}
      </div>
      <div class="animate text-lg font-medium text-black/75 dark:text-white/75">
        By {paper.data.author}
      </div>
    </div>
    <article class="animate">
      <Content />
    </article>
  </Container>
</PageLayout>
